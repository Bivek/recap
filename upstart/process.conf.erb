start on starting <%= app %>-<%= name %>
stop on stopping <%= app %>-<%= name %>

respawn

setuid <%= user %>
setgid <%= user %>

exec /bin/bash -l -c 'cd <%= engine.root %>; export PORT=<%= port %>;<% engine.env.each_pair do |var,env| %> export <%= var.upcase %>=<%= shell_quote(env) %>; <% end %> exec <%= process.command %> >> <%= log %>/<%=name%>-<%=num%>.log 2>&1'
